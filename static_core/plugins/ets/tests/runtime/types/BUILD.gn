  deps = [ "${ark_root}/plugins/ets:etsstdlib" ]

  env = [ "PANDA_STD_LIB=" + rebase_path(
              "${root_gen_dir}/arkcompiler/runtime_core/static_core/plugins/ets/etsstdlib.abc") ]
  no_cores = true
  sources = [
    "ets_abc_runtime_linker_test.cpp",
    "ets_arraybuf_test.cpp",
    "ets_atomic_flag_test.cpp",
    "ets_atomic_int_test.cpp",
    "ets_base_enum_test.cpp",
