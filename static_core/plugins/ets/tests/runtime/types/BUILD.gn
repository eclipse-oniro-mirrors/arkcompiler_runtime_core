  deps = [ "${ark_root}/plugins/ets/tests:mock_stdlib" ]
  env = [ "PANDA_STD_LIB=" + rebase_path(
              "${root_gen_dir}/arkcompiler/runtime_core/static_core/plugins/ets/tests/mock_stdlib.abc") ]
  no_cores = true
  sources = [
    "ets_array_test.cpp",
    "ets_class_file_test.cpp",
    "ets_field_test.cpp",
    "ets_method_signature_test.cpp",
    "ets_method_test.cpp",
    "ets_object_test.cpp",
    "ets_string_builder_test.cpp",
    "ets_string_test.cpp",
    "get_test_class.cpp",
  ]
  module_out_path = module_ets_tests_out_path
