function main(): int {
  const suite = new arktest.ArkTestsuite('UndefinedType API tests for SDK');
  suite.addTest('REF: isPrimitive/isReference/hasName', testREFProperties);
  suite.addTest('getName/getLiteral', testGetNameLiteral);
  suite.addTest('equals self', testEqualsSelf);
  suite.addTest('equals across instances', testEqualsAcross);
  return suite.run();
}

function testREFProperties() {
  const ut = UndefinedType.REF;
  arktest.assertTrue(ut.isPrimitive());
  arktest.assertTrue(ut.isReference());
  arktest.assertTrue(ut.hasName());
}

function testGetNameLiteral() {
  const ut = UndefinedType.REF;
  arktest.assertEQ('undefined', ut.getName());
  arktest.assertEQ('undefined', ut.getLiteral());
}

function testEqualsSelf() {
  const ut = UndefinedType.REF;
  arktest.assertTrue(ut.equals(ut));
}

function testEqualsAcross() {
  const a = UndefinedType.REF;
  const b = UndefinedType.REF;
  arktest.assertTrue(a.equals(b));
  arktest.assertTrue(b.equals(a));
}
