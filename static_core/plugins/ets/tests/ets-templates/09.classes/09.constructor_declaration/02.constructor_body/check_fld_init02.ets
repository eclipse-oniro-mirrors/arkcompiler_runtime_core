/*---
desc: Ensure that a field is initialized once
---*/

let res = 0

function foo() {
    return ++res
}

class A {
    fld: int = foo()

    constructor(a: boolean) {} // primary

    constructor() {  // secondary
        this(true)
    }

    constructor(a: number) { // secondary
        this()
    }
}

class B extends A {
    constructor(a: boolean) { // primary to primary
        super(a)
    }

    constructor() {  // primary to secondary
        super()
    }

    constructor(a: number) { // primary to secondary
        super(a)
    }
}

function main() {
    res = 0
    let b = new B(true)  // primary to primary
    arktest.assertEQ(b.fld, 1)

    res = 0
    b = new B()  // primary to secondary
    arktest.assertEQ(b.fld, 1)

    res = 0
    b = new B(1.0)  // primary to secondary
    arktest.assertEQ(b.fld, 1)
}
