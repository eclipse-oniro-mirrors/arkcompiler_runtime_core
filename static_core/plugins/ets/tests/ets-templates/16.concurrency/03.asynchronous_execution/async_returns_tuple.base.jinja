{% from "16.concurrency/03.asynchronous_execution/async_api_helper.jinja" import generate_async, call_async %}

{% set cases = [
    {
        'tuple_types': ['number', 'string'],
        'tuple_values': [42, '"Hello"'],        
    },
    {
        'tuple_types': ['string', 'boolean', 'number'],
        'tuple_values': ['"Test"', 'true', 100],        
    }
]%}

{% macro generate_complete_test(declaration_type='function') %}
{% for c in cases %}

{% set type = '[' + c.tuple_types | join(', ') + ']' %}

/*---
desc: The return type of an async {{declaration_type}} must be Promise<{{type}}>.
---*/

{% set async_body -%}
    const value: {{ type }} = [{{ c.tuple_values | join(', ') }}]
    return value
{%- endset %}

{%- set params = {
    'name': 'noParams',
    'body': async_body,
    'return_type': ': Promise<' + type + '>',
    'class_name': 'AsyncMethodReturnClass'
} -%}

{{ generate_async(declaration_type, params) }}

async function startTest(){
    let result = {{ call_async(declaration_type, params) }}
    arktest.assertTrue(result instanceof Promise)
    let awaited_result = await result    
    {% for type in c.tuple_types -%}
    arktest.assertTrue(awaited_result[{{loop.index0}}] instanceof {{c.tuple_types[loop.index0]}})
    arktest.assertEQ(awaited_result[{{loop.index0}}], {{c.tuple_values[loop.index0]}})
    {% endfor %}
}

function main(){
    waitForCompletion(startTest)
}

{% endfor %}
{% endmacro %}
