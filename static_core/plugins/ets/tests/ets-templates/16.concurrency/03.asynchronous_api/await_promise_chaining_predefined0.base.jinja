{% macro generate_complete_test(cases) %}
{% for c in cases %}
{% for type_name in [c.type, c.alias] | select %}

/*---
desc: Test to wait for Promise<{{type_name}}> Chaining.
---*/

const value: {{type_name}} = {{c.value}}
const expectedValue = `${value}.1.2`;

function promiseChaining() {
  return Promise.resolve(value)
    .then((result) => {
      return String(result)+".1";
    })
    .then((result) => {
      return String(result)+".2";
    });
}
async function startTest() {
    const result = await promiseChaining();
    arktest.assertEQ(result, expectedValue, `Promise Chaining result should be ${expectedValue}`);
}

function main() {
    waitForCompletion(startTest); 
}
{% endfor %}
{% endfor %}
{% endmacro %}