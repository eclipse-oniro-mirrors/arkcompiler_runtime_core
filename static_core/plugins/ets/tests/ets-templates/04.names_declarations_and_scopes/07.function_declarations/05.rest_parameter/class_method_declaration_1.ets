/*---
desc: class method Rest parameters with array type.
---*/

class RestClass {

    sum(...numbers: number[]): number {
        let res = 0;
        for (let num of numbers) {
            res += num;
        }
        return res;
    }

    rsum(...numbers: readonly number[]): number {
        let res = 0;
        for (let num of numbers) {
            res += num;
        }
        return res;
    }

}

function main() {
    let emp: number[] = []
    let tmp: number[] = [1, 2, 3];
    let arr: Array<number> = Array.create<number>(1, 1.0)
    let roo: readonly number[] = [1, 2, 3]

    let rc = new RestClass

    arktest.assertEQ(rc.sum(), 0);
    arktest.assertEQ(rc.sum(...emp), 0);

    arktest.assertEQ(rc.sum(1,2,3), 6);
    arktest.assertEQ(rc.sum(...tmp), 6);
    arktest.assertEQ(rc.sum(...arr), 1);
    arktest.assertEQ(rc.rsum(...roo), 6);
}
