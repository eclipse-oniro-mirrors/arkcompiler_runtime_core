interface Employee {
    name: string;
    salary: number;
    hasBonus: boolean;
}

function calculateTotalSalary(employees: Employee[]): number {
    const bonusAmount = 500;

    let totalSalary = 0;
	EtsStepArkTest()

    for (const employee of employees) {
        let adjustedSalary = employee.salary;
        if (employee.hasBonus) {
            adjustedSalary += bonusAmount;
        }
        totalSalary += adjustedSalary;
    }
    return totalSalary;
}

const employees: Employee[] = [
    { name: "Alice", salary: 3000, hasBonus: true },
    { name: "Bob", salary: 2800, hasBonus: false },
    { name: "Charlie", salary: 3200, hasBonus: true },
    { name: "David", salary: 2900, hasBonus: false }
];

const totalSalary = calculateTotalSalary(employees);
