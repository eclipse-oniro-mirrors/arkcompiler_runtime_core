    {% endfor -%});
{%- elif type == "string" -%}
    {% for k in range(count) -%}
        std::string s{{ loop.index }};
    {% endfor -%}
    {% for k in range(count) -%}
        GetStdString(env, a{{ loop.index }}, s{{ loop.index }});
    {% endfor -%}
    assert(
    {% for k in range(count) -%}
        s{{ loop.index }} == "{{ loop.index }}"{% if not loop.last %} && {% endif %}
    {% endfor -%});
{%- else %}
    assert(
    {% for k in range(count) -%}
        a{{ loop.index }} == {{ loop.index }}{% if not loop.last %} && {% endif %}
    {% endfor -%});
{%- endif %}
}
{% endif %}
