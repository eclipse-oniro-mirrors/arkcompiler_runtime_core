{
  "compilerOptions": {
    "baseUrl": "${CMAKE_CURRENT_SOURCE_DIR}",
    "paths": {
      "escompat": ["${PANDA_ROOT}/plugins/ets/stdlib/escompat"],
      "std": ["${PANDA_ROOT}/plugins/ets/stdlib/std"],
      "decl_js": [ "${CMAKE_CURRENT_SOURCE_DIR}/js_suites/scenarios" ],
      "pure_js": ["${CMAKE_CURRENT_SOURCE_DIR}/js_suites/scenarios.js"]
    },
    "dynamicPaths": {
      "${CMAKE_CURRENT_SOURCE_DIR}/js_suites/scenarios": {
        "language": "js",
        "hasDecl": true
      },
      "${CMAKE_CURRENT_SOURCE_DIR}/js_suites/scenarios.js": {
        "language": "js",
        "hasDecl": false
      }
    }
  }
}
